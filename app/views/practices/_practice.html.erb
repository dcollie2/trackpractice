<%= turbo_frame_tag practice, class: 'card w-50' do %>
  <div class="card-body">
    <!-- Profile picture and short information -->
    <div class="d-flex align-items-center position-relative pb-3">
    <!--  <div class="flex-shrink-0">-->
    <!--    <img class="img-md rounded-circle" src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="Profile Picture" loading="lazy">-->
    <!--  </div>-->
      <div class="flex-grow-1">
        <h5 class="h5 stretched"><%= minutes_in_words(practice.minutes) %></h5>
        <p class="text-muted m-0"><%= practice_date(practice.practice_date) %></p>
      </div>
    </div>
    <p><%= practice.notes %></p>
    <!-- END : Profile picture and short information -->

    <!-- Options buttons -->
    <div class="mt-3 pt-2 text-center border-top">
      <div class="d-flex justify-content-center gap-3">
        <%#= link_to "View", practice, class: "btn btn-sm btn-info btn-outline-light btn-lg" %>
        <%= link_to "Edit", edit_practice_path(practice), class: "btn btn-sm btn-info btn-outline-light btn-lg" %>
        <%= button_to "Destroy this practice", practice, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "btn btn-sm btn-info btn-outline-light btn-lg" %>
      </div>
    </div>
    <!-- END : Options buttons -->
  </div>
<% end %>