<% if user.streak > 2 %>
  <div class="row mx-1 h1" id="user-streak">
    <div class='badge bg-primary p-4'>You're on a <%= user.streak %> day streak!<%= " Your longest streak ever!" if user.streak == user.longest_streak %></div>
    <%= content_tag(:div, "You're about to break your record of #{user.longest_streak} days!", class: ['badge', 'bg-success', 'p-4']) if user.approaching_streak? %>
  </div>
<% end %>
