      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
        <% song.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :lyrics, style: "display: block" %>
    <%= form.text_area :lyrics, id: 'lyrics', class: 'wysiwyg', rows: 40, cols: 120 %>
  </div>

  <div>
    <%= form.label :chords, style: "display: block" %>
    <%= form.text_area :chords, id: 'chords', class: 'wysiwyg', rows: 40, cols: 120 %>
  </div>

  <div>
    <%= form.label :shared, style: "display: block" %>
    <%= form.check_box :shared %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
