      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
        <% song.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='mb-3'>
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.check_box :shared, class: 'form-check-input' %>
    <%= form.label :shared, class: 'form-check-label' %>
  </div>

  <div class='mb-3'>
    <%= form.label :lyrics, class: 'form-label' %>
    <%= form.rich_text_area :lyrics, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :chords, class: 'form-label' %>
    <%= form.rich_text_area :chords, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.submit 'Update Song', class: 'btn btn-primary' %>
  </div>
<% end %>
