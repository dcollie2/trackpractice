<!DOCTYPE html>
<html>
  <head>
    <title>Trackpractice</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true, type: 'module' %>
    <%= favicon_link_tag %>
  </head>

  <body>

  </body>
  <header>
    <div class="navbar navbar-dark bg-dark box-shadow">
      <div class="container d-flex justify-content-between">
        <a href="/practices" class="navbar-brand d-flex align-items-center">
          <strong><i class="bi bi-music-note"></i>Track Practice</strong>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item"><a class="nav-link <%= active_state('practices') %>" href="/practices">Practices</a></li>
            <li class="nav-item"><a class="nav-link <%= active_state('foci') %>" href="/foci">Foci</a></li>
            <li class="nav-item"><a class="nav-link <%= active_state('songs') %>" href="/songs">Songs</a></li>
            <% if user_signed_in? %>
              <li class="nav-item"><%= button_to "logout", destroy_user_session_path, method: :delete, class: 'nav-link'  %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </header>

  <main role="main">
    <div class="container">

      <%= render "layouts/flash" %>

      <div class="row">
        <%= yield %>
      </div>
    </div>
  </main>

  <footer class="text-muted">
    <div class="container">
      <%# <p class="float-right">
        <a href="#">Back to top</a>
      </p> %>
    </div>
  </footer>



</html>
